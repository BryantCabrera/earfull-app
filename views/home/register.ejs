<!-- views/home/register.ejs -->

<!DOCTYPE html>
<html>

<!-- Partial for head, requires variable "title" -->
	<%- include("../partials/head", {title: title}) %>

<body>
<!-- Partial for header, requires variables "header" (string) and "loggedIn" (boolean) -->
	<%- include("../partials/header", {header: header}) %>

	<main>
		<h1>Register</h1>
		<form class="input-field" action="/earfull/user/auth/register" method="POST">
			Username: <input type="text" name="username"> <br />
			Email: <input type="email" name="email"> <br />
			Password: <input type="password" name="password"> <br />
			Confirm Password: <input type="password" name="confirm"> <br />
			<button>Create Account</button>
		</form>
	</main>

<!-- Partial for footer -->
	<%- include("../partials/footer") %>
</body>
</html>