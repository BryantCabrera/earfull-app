<!DOCTYPE html>
<html>
<head>
	<%- include("../partials/head", {title: title}) %>
</head>
<body>
	<%- include("../partials/header", {header: header}) %>
 	<main>
 		<div class="main-container">
			<h1><%=episode.podcast_title_original%></h1>
			<h2><%=episode.title_original%></h2>

      <% //if (podcastFound) { -%>
       <a href="/earfull/podcasts/<%=episode.podcast_id%>">Check out more <%=episode.podcast_title_original%></a>
      <% //} %>

			<div class="desc-pic-container">
				<img class="show-pic" src="<%=episode.image%>">
				<p class="show-desc">&nbsp;&nbsp;&nbsp;&nbsp;<%=episode.description_original%></p>
			</div>

			<figure>
				<!-- <figcaption>Listen</figcaption> -->
				<audio controls src="<%=episode.audio%>">Your browser does not support the <code>audio</code> element</audio>
			</figure>

			<div class="comment-box">
				<% for (var i = 0; i < episode.comments.length; i++) { -%>
					<h2><%=episode.comments[i].name%></h2>
					<p><%=episode.comments[i].body%></p>
					<hr>		
				<% } -%>
			</div>
		</div>
	</main>

	<%- include("../partials/footer") %>
</body>
</html>

